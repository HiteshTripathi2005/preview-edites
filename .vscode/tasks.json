{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Visual Editor Demo",
      "dependsOrder": "parallel",
      "dependsOn": ["Start React", "Start Nuxt"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Add Inspector IDs",
      "type": "shell",
      "command": "cd ${workspaceFolder}/react-dev && npm run add-ids",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Start React",
      "type": "shell",
      "command": "cd ${workspaceFolder}/react-dev && npm run dev",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Start Nuxt",
      "type": "shell",
      "command": "cd ${workspaceFolder}/client && npm run dev",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
